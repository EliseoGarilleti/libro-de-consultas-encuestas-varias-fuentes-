# M√°xima IDV al PSOE entre hombres y mujeres (CIS)
## Usando nuestro peso
df %>%
  filter(fecha >= as.Date("2023-09-01")) %>%
  filter(fuente == "cis") %>%
  group_by(fecha, genero, idv_group) %>%
  tally(wt = ponde_estudio) %>%
  mutate(perc = round((n/sum(n)*100),1)) %>%
  filter(idv_group == "PSOE") %>%
  group_by(genero) %>%
  slice_max(perc, n = 1, with_ties = FALSE) %>%
  select(-idv_group, -n)

## Usando el peso del CIS
df %>%
  filter(fecha >= as.Date("2023-09-01")) %>%
  filter(fuente == "cis") %>%
  group_by(fecha, genero, idv_group) %>%
  tally(wt = ponde) %>%
  mutate(perc = n / sum(n)) %>%
  filter(idv_group == "PSOE") %>%
  group_by(genero) %>%
  slice_max(perc, n = 1, with_ties = FALSE)

